{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": [
      "ES2018",
      "DOM",
      "ES2020.BigInt"
    ],
    "allowJs": true,
    "jsx": "react",
    "strict": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false
  },
  "include": [
    "src"
  ]
}
