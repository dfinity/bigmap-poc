{
  "version": 1,
  "canisters": {
    "bigmap": {
      "type": "custom",
      "candid": "src/bigmap_index.did",
      "wasm": "target/wasm32-unknown-unknown/release/bigmap_index.wasm",
      "build": "cargo build --target wasm32-unknown-unknown --package bigmap --release"
    },
    "bigmap_ui": {
      "frontend": {
        "entrypoint": "bigmap_ui/src/public/App.tsx"
      },
      "source": [
        "bigmap_ui/src/assets",
        "bigmap_ui/dist/bigmap_ui/"
      ],
      "type": "assets"
    },
    "bigmap_data": {
      "type": "custom",
      "candid": "src/bigmap_data.did",
      "wasm": "target/wasm32-unknown-unknown/release/bigmap_data.wasm",
      "build": "cargo build --target wasm32-unknown-unknown --package bigmap --release"
    }
  },
  "networks": {
    "tungsten": {
      "providers": [
        "https://gw.dfinity.network"
      ],
      "type": "persistent"
    },
    "local": {
      "bind": "0.0.0.0:8000",
      "type": "ephemeral"
    }
  },
  "defaults": {
    "build": {
      "output": "canisters/"
    },
    "start": {
      "address": "127.0.0.1",
      "port": 8000,
      "serve_root": "canisters/eeoo/assets"
    }
  }
}
